class SRB2EnemyTemplate : Actor
{
	Default
	{
		Monster;
		+FLOORCLIP +DONTCORPSE +NOBLOOD
		DeathSound "sfx/pop";
	}
	States
	{
		Death:
			XPLD A 1 {
				A_Scream();
				A_NoBlocking();
				A_Stop();
				bDONTTHRUST = true;
				bNOGRAVITY = true;
			}
			XPLD BCD 5;
			Stop;
	}
}

