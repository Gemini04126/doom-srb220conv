class SRB2MonitorTemplate : Actor
{
	Default
	{
		Health 1;
		ReactionTime 8;
		Radius 16;
		Height 32;
		Mass 100;
		+FLOORCLIP +SOLID +SHOOTABLE +NOBLOOD +COUNTITEM
		DeathSound "sfx/pop";
	}
	States
	{
		Death:
			TNT1 A 0;
			Goto Death2;
		Death2:
			TNT1 A 0 {
				A_Scream();
				A_NoBlocking();
				A_Stop();
				bDONTTHRUST = true;
				bNOGRAVITY = true;
			}
			MTEX BCDE 2;
			MTEX F -1;
			Stop;
	}
}

